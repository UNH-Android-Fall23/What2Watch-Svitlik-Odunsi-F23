<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.q1showmovie.q1Fragment">


    <TextView
        android:id="@+id/text_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_Home"
        android:layout_width="311dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text=" What2Watch"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/text_ShowMovie"
        android:layout_width="237dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text=" Show or Movie?"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_show"
        app:layout_constraintEnd_toEndOf="@+id/text_Home"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/text_Home"
        app:layout_constraintTop_toBottomOf="@id/text_Home"
        app:layout_constraintVertical_bias="0.115"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_movie"
        style="@style/Widget.Material3.Button"
        android:layout_width="295dp"
        android:layout_height="117dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#7973F7"
        android:fontFamily="@font/alata"
        android:text="Movie"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/text_Home"
        app:layout_constraintStart_toStartOf="@+id/text_Home"
        app:layout_constraintTop_toBottomOf="@+id/btn_show" />

    <Button
        android:id="@+id/btn_show"
        style="@style/Widget.Material3.Button"
        android:layout_width="295dp"
        android:layout_height="117dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#7973F7"
        android:fontFamily="@font/alata"
        android:text="Show"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/text_Home"
        app:layout_constraintStart_toStartOf="@+id/text_Home"
        app:layout_constraintTop_toBottomOf="@+id/text_Home" />

    <Button
        android:id="@+id/btn_both"
        style="@style/Widget.Material3.Button"
        android:layout_width="295dp"
        android:layout_height="117dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/alata"
        android:backgroundTint="#7973F7"
        android:text="Both"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/text_Home"
        app:layout_constraintStart_toStartOf="@+id/text_Home"
        app:layout_constraintTop_toBottomOf="@+id/btn_movie" />

</androidx.constraintlayout.widget.ConstraintLayout>