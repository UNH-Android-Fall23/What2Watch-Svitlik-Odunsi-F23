<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.q1.q1Fragment">


    <TextView
        android:id="@+id/text_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Home"
        android:layout_width="260dp"
        android:layout_height="62dp"
        android:fontFamily="@font/alata"
        android:text=" What2Watch"
        android:textColor="#000000"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
       />

    <TextView
        android:id="@+id/text_ShowMovie"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:fontFamily="@font/alata"
        android:text=" Show or Movie?"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_Home"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_movie"
        android:layout_width="148dp"
        android:layout_height="336dp"
        android:text="Movie"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="148dp"
        android:layout_height="336dp"
        android:layout_toEndOf="@+id/btn_movie"
        android:layout_marginStart="16dp"
        android:text="Show"
        android:layout_centerVertical="true" />

