<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_Home"
        android:layout_width="260dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alata"
        android:text="What2Watch"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_StartQuiz"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:layout_below="@+id/text_Home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/alata"
        android:text="@string/start_the_quiz"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/begin"
        android:layout_below="@+id/text_StartQuiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/text_or"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/btn_begin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alata"
        android:text="Or..."
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_pickForMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just Pick for Me!"
        android:layout_below="@+id/text_or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
